#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void transformar(int *c, int *Bin);

void main()
{
	int Bin,Bin2,c=0;
	cout<< "Introduce un numero binario (o-1): ";
	cin>> Bin;
	Bin2=Bin;

	while (Bin2>0)
	{
		Bin2 = Bin2/10;
		c++;
	}

transformar(&c,&Bin);

_getch();

}


void transformar(int *c, int *Bin)
{
	int S=0,k=0,D=*Bin;
	while (k<=*c)
	{
		int Cifra = D%10;
		S = S + (Cifra*pow(2,k));
		D=D/10;
		k++;
	}

	cout<<"El numero Binario "<<*Bin<<" Es igual "<<S;

}



